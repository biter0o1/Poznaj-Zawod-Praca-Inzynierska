<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Strona Glowna!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('js/app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('js/app') }}
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="{{ path('example') }}">Uploader</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {% if app.request.get('_route') == 'index' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('example') }}">Strona główna</a>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') == 'latest_photos' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('example') }}">Najnowsze</a>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') == 'my_photos' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('example') }}">Moje zdjęcia</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Wyloguj się</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Zaloguj się</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Zarejestruj się</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>


{#        <div id="app" data-user="{{ app.user.username | serialize('json')  | json_encode }}">#}
        <div id="app">
            <Example></Example>
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
