{% extends 'base.html.twig' %}

{% block title %}Zaloguj się!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">Zostały podane złe dane!</div>
    {% endif %}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Zaloguj się</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-3" autocomplete="email" required autofocus>
        <label for="inputPassword">Hasło</label>
        <input type="password" name="password" id="inputPassword" class="form-control mt-3" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

            <div class="checkbox mb-3 mt-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Zapamiętaj mnie
                </label>
            </div>


        <button class="btn btn-lg btn-primary" type="submit">
            Zaloguj się
        </button>

        <button class="btn btn-lg btn-danger" type="button">
            <a class="nav-link active" href="{{ path('app_forgot_password_request') }}">Zapomniałem hasła!</a>
        </button>
    </div>
</form>
{% endblock %}
