{% extends 'base.html.twig' %}

{% block title %}
    <script>
        import Example from "../../assets/js/components/Example";
        export default {
            components: {Example}
        }
    </script>
    Example index{% endblock %}

{% block body %}
    <h1>Example index</h1>

    <Example></Example>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ExampleString</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for example in examples %}
            <tr>
                <td>{{ example.id }}</td>
                <td>{{ example.exampleString }}</td>
                <td>
                    <a href="{{ path('app_example_show', {'id': example.id}) }}">show</a>
                    <a href="{{ path('app_example_edit', {'id': example.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_example_new') }}">Create new</a>
{% endblock %}

